<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con logo y botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_launcher_foreground"
                android:scaleType="fitCenter"
                android:contentDescription="@string/logo_app" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- AGREGAR ID al botón de búsqueda -->
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_search"
                android:contentDescription="@string/buscar_recetas"
                android:scaleType="centerInside" />

            <!-- AGREGAR ID al botón de menú -->
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/abrir_menu"
                android:layout_marginStart="8dp"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Banner Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FF6B35"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:contentDescription="@string/banner_principal_desc"
            android:focusable="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BATCHCOOK"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:letterSpacing="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="PASO A PASO"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="¿Qué vas a cocinar hoy?"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Categorías principales -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/layout_categorias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Categoría 1 - Avena -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/categoria_avena">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/categoria_avena"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_avena" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Avena"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Categoría 2 - Camarones -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/categoria_camarones">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/categoria_camarones"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_camarones" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Camarones"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Categoría 3 - Champiñones -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/categoria_champinones">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/categoria_champinones"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_champinones" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Champiñones"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Categoría 4 - Carne -->
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/categoria_carne">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/categoria_carne"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_carne" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Carne"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sección: Tipo de platillo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Tipo de platillo"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Tipos de platillo -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/layout_tipos_platillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tipo 1 - Bebidas -->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/tipo_bebidas">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/tipo_bebidas"
                        android:contentDescription="@string/imagen_bebidas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Bebidas"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Tipo 2 - Cremas -->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/tipo_cremas">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/tipo_cremas"
                        android:contentDescription="@string/imagen_cremas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Cremas"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Tipo 3 - Dips -->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/tipo_dips">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/tipo_dips"
                        android:contentDescription="@string/imagen_dips" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Dips"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Tipo 4 - Entradas -->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/tipo_entradas">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/tipo_entradas"
                        android:contentDescription="@string/imagen_entradas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Entradas"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Sección: Para todos los días -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="Para todos los días"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Recetas para todos los días - HorizontalScrollView como las anteriores -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:id="@+id/layout_recetas_diarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Receta 1 - Brunch -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/receta_brunch">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/receta_brunch"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_brunch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Brunch"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Ideas para brunch delicioso"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Receta 2 - Comidas Caseras -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/receta_comidas_caseras">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/receta_comidas_caseras"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_comidas_caseras" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Comidas Caseras"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="¡Cocina platos llenos de amor y sabor!"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Receta 3 - Desayunos -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/receta_desayunos">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/receta_desayunos"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_desayunos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Desayunos"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Ideas de recetas para desayunos"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Receta 4 - Lunch -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/receta_lunch">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/receta_lunch"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_lunch" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Lunch"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Recetas fáciles y rápidas"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="center" />

                </LinearLayout>

                <!-- Receta 5 - Cenas -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/card_background"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@string/receta_cenas">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/receta_cenas"
                        android:background="@drawable/circle_background"
                        android:contentDescription="@string/imagen_cenas" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Cenas"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Recetas para cenar ligeras"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- AGREGAR RECYCLERVIEW PARA LAS RECETAS -->

        <!-- AGREGAR FAB PARA AGREGAR RECETAS -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/primary"
            app:tint="@android:color/white"
            android:visibility="gone" />

        <!-- RecyclerView para mostrar las recetas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewRecetas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAgregarReceta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Receta"
            android:layout_margin="16dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />




    </LinearLayout>

</ScrollView>